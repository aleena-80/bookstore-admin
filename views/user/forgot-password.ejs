<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ocean Books - Forgot Password</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <h1><a href="/">Ocean Books</a></h1>
                <p class="tagline">Dive into a Sea of Stories</p>
            </div>
            <ul class="nav-links">
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Signup</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="forgot-password-form">
            <div class="form-container">
                <h2>Forgot Your Password?</h2>
                <p class="subtitle">Enter your email to reset your password.</p>
                <% if (error) { %>
                    <p class="error"><%= error %></p>
                <% } %>
                <% if (success) { %>
                    <p class="success"><%= success %></p>
                <% } %>
                <form id="forgot-password-form" action="/users/forgot-password" method="POST">
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" required placeholder="Enter your email">
                    </div>
                    <button type="submit">Send Reset Link</button>
                </form>
                <p class="form-footer">Remembered your password? <a href="/login">Login here</a>.</p>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>Ocean Books</h4>
                <p>Explore a world of literature with us.</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/terms">Terms & Conditions</a></li>
                    <li><a href="/privacy">Privacy Policy</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Newsletter</h4>
                <p>Subscribe for updates and offers!</p>
                <form action="/subscribe" method="POST">
                    <input type="email" placeholder="Enter your email" name="email">
                    <button type="submit">Subscribe</button>
                </form>
            </div>
        </div>
        <p class="footer-bottom">Â© 2025 Ocean Books. All rights reserved.</p>
    </footer>
    <script>
        document.getElementById('forgot-password-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const formContainer = document.querySelector('.form-container');
            
            try {
                const response = await fetch('/users/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email }),
                });
                const data = await response.json();

                // Remove old messages
                formContainer.querySelector('.error')?.remove();
                formContainer.querySelector('.success')?.remove();

                // Add new message
                const messageP = document.createElement('p');
                if (!response.ok) {
                    messageP.className = 'error';
                    messageP.textContent = data.message || 'Failed to send reset link.';
                } else {
                    messageP.className = 'success';
                    messageP.textContent = data.message || 'Password reset link sent to your email!';
                }
                formContainer.insertBefore(messageP, document.getElementById('forgot-password-form'));
            } catch (error) {
                console.error('Fetch Error:', error);
                formContainer.querySelector('.error')?.remove();
                const errorP = document.createElement('p');
                errorP.className = 'error';
                errorP.textContent = 'Error: Something went wrong.';
                formContainer.insertBefore(errorP, document.getElementById('forgot-password-form'));
            }
        });
    </script>
</body>
</html>